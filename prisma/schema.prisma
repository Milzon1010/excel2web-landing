generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Transaction {
  id          Int      @id @default(autoincrement())
  date        DateTime @default(now())
  description String
  category    String
  amountCents Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
